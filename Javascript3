// backend/src/routes/hcmRoutes.js
const express = require('express');
const router = express.Router();
const hcmController = require('../controllers/hcmController');

// Employee routes
router.get('/employees', hcmController.getEmployees);
router.get('/employees/:id', hcmController.getEmployeeById);
router.post('/employees', hcmController.createEmployee);

